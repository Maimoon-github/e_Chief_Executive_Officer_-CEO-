# ── Shopify Store ─────────────────────────────────────────────────────────────
SHOPIFY_STORE_URL=https://paddleaurum.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_API_VERSION=2024-01

# ── Ollama (Local LLM — no cost) ─────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_FALLBACK_MODEL=mistral

# ── Email (SMTP) ──────────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=ops@paddleaurum.com
SMTP_PASS=your_app_password_here
SMTP_FROM_NAME=PaddleAurum Operations

# ── Internal Notification ────────────────────────────────────────────────────
ALERT_EMAIL=admin@paddleaurum.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ── Database ──────────────────────────────────────────────────────────────────
SQLITE_DB_PATH=paddleaurum/memory/agent_memory.db

# ── System ────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=60
SHORT_TERM_MEMORY_WINDOW=20
CRON_INTERVAL_MINUTES=30

# ── LangSmith Observability (Optional — free tier) ───────────────────────────
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=ls__your_key_here
LANGCHAIN_PROJECT=paddleaurum
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
